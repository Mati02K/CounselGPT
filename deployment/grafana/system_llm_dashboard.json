{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Inference Latency Avg (last 30m)",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(inference_duration_seconds_sum[30m]) / increase(inference_duration_seconds_count[30m])"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 2 },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Requests Per Second (infer)",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_requests_total{handler=\"/infer\"}[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "req/s", "decimals": 2 },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "HTTP Error Rate (non-2xx, last 30m)",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * sum(rate(http_requests_total{status!~\"2..\"}[30m])) / sum(rate(http_requests_total[30m]))"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 1 },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Cache Hit Ratio (lifetime)",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "cache_hits_total / (cache_hits_total + cache_misses_total)"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "decimals": 1 },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Inference Latency p95 (30m rolling)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(increase(inference_duration_seconds_bucket[30m])) by (le))"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 2 },
        "overrides": []
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Tokens Generated / sec",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(tokens_generated_total[5m])"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "none", "decimals": 2 },
        "overrides": []
      }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Cache Hits vs Misses (per sec)",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(cache_hits_total[5m])",
          "legendFormat": "hits/sec"
        },
        {
          "refId": "B",
          "expr": "rate(cache_misses_total[5m])",
          "legendFormat": "misses/sec"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops", "decimals": 3 },
        "overrides": []
      }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - (avg by(instance)(rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 1 },
        "overrides": []
      }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "Memory Usage (%)",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 12 },
      "targets": [
        {
          "refId": "A",
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 1 },
        "overrides": []
      }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "Disk Throughput (Read / Write)",
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 18 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(node_disk_read_bytes_total[5m]))",
          "legendFormat": "read"
        },
        {
          "refId": "B",
          "expr": "sum(rate(node_disk_written_bytes_total[5m]))",
          "legendFormat": "write"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "Bps", "decimals": 1 },
        "overrides": []
      }
    },
    {
      "id": 11,
      "type": "timeseries",
      "title": "Network In / Out (bytes/sec)",
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 18 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(node_network_receive_bytes_total[5m]))",
          "legendFormat": "in"
        },
        {
          "refId": "B",
          "expr": "sum(rate(node_network_transmit_bytes_total[5m]))",
          "legendFormat": "out"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "Bps", "decimals": 1 },
        "overrides": []
      }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 38,
  "style": "light",
  "tags": ["llm", "system"],
  "title": "System + LLM API Overview (Fixed)",
  "version": 1
}
